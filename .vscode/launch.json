{
    "version": "0.2.0",
    "configurations": [
        {
            "request": "launch",
            "name": "Launch Program",
            "type": "pwa-node",
            "program": "${workspaceFolder}/src/main.ts",
            "cwd": "${workspaceFolder}/src",
            "runtimeExecutable": "deno",
            "runtimeArgs": [
                "run",
                "--inspect",
                "--allow-net",
                "--allow-read",
                "--allow-write",
            ],
            "outputCapture": "std",
            "attachSimplePort": 9229
        },
        {
            "request": "launch",
            "name": "Docsify Serve",
            "type": "pwa-node",
            "cwd": "${workspaceFolder}",
            "runtimeExecutable": "docsify",
            "runtimeArgs": [
                "serve",
                "./docs",
            ],
            "outputCapture": "std",
        }
    ]
}